{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CSF Profile Assessment",
  "version": "2.2.0",
  "identifier": "io.simplycyber.csf-profile",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "CSF Profile Assessment Tool - Simply Cyber Academy",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https://*.atlassian.net https://*.atlassian.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "NIST CSF 2.0 Profile Assessment Tool",
    "longDescription": "A comprehensive tool for organizations to implement and assess their cybersecurity posture using the NIST Cybersecurity Framework (CSF). Track controls, assign ownership, document findings, and export assessments.",
    "copyright": "Simply Cyber Academy",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "wix": null
    }
  }
}
